include ../button/button

mixin dropdown({title, placeholder, items})
  .dropdown.js-dropdown&attributes(attributes)
    p.dropdown__label= title
    .dropdown__body
      input.dropdown__input(type = 'text' placeholder = placeholder readonly)
    .dropdown__list
      each item in items
        .dropdown__item(data-name = item.name, data-voc = item.voc)
          .dropdown__item-label= item.label
          .dropdown__item-controls
            button.dropdown__button.dropdown__button--minus(type = 'button') remove
            span.dropdown__item-quantity 0
            button.dropdown__button.dropdown__button--plus(type = 'button') add
      .dropdown__controls
        +button({text: 'Очистить'})(class = 'button--cancel dropdown__clear')
        div.dropdown__apply-wrapper
          +button({text: 'Применить'})(class = 'dropdown__apply')
